@model SMS.WebApp.Models.Student
@{

}

<div class="container">
    <form asp-controller="Student" asp-action="CreateOrEdit" method="post">
        <div class="row">
            <div class="col">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name" aria-label="Name">
            </div>
            <div class="col">
                <label asp-for="Address"></label>
                <input asp-for="Address" type="text" class="form-control" placeholder="Address" aria-label="Address">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" type="number" class="form-control" aria-label="Phone">
            </div>
            <div class="col">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Address">
            </div>
            <div>

                <input class="btn btn-primary mt-3" type="submit">
            </div>


        </div>
    </form>
</div>

    @section Scripts{
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }