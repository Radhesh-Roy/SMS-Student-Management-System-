@model SMS.WebApp.Models.Teacher
@{

}


<div class="container">

    <form asp-action="CreateAndEdit" asp-controller="Teacher" method="post" class="bg-light shadow border-top rounded mt-5">

        <h1 class="text-center mt-3">FillUp Teacher Details</h1>
        <hr>
        <div class="container-lg">
            <div class="form-group row m-3 mt-2">
                <label asp-for="Name" for="inputnamel3" class="col-sm-2 col-form-label mt-2">Name</label>
                <div class="col-sm-10 mt-3">
                    <input asp-for="Name" type="text" class="form-control" id="inputnamel3" placeholder="Enter Your Name">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Address" for="inputaddress3" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                    <input asp-for="Address" type="text" class="form-control" id="inputaddress3" placeholder="Enter Your Address">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Qualification" for="inputqual3" class="col-sm-2 col-form-label">Qualification</label>
                <div class="col-sm-10">
                    <input asp-for="Qualification" type="text" class="form-control" id="inputqual3" placeholder="Qualification">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Email" for="inputemail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="email" class="form-control" id="inputemail3" placeholder="Enter Email">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Phone" for="inputphone3" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                    <input asp-for="Phone" type="number" class="form-control" id="inputphone3" placeholder="Enter Phone Number">
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary my-3">Submit</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
